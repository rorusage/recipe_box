<div class="col-md-12">
  <%= simple_form_for @recipe do |f|%>
    <div class="form-group">
      <%= f.input :title, input_html: {class: "form-control"} %>
      <%= f.input :content, input_html: {class: "form-control"} %>
        <%= f.simple_fields_for :ingredients do |ingredient| %>
          <%= ingredient.input :name, input_html: {class: "form-control"} %>
          <%= ingredient.input :amount, input_html: {class: "form-control"} %>
        <% end %>
        <%= f.simple_fields_for :steps do |step| %>
          <%= step.input :step_order, input_html: {class: "form-control"} %>
          <%= step.input :content, input_html: {class: "form-control"} %>
        <% end %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting..."}%>
  <% end %>
</div>
