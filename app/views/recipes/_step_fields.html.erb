<div class="nested-fields">
  <% if f.object.step_order? %>
    <%= f.input :step_order,input_html: {class: "form-control"} %>
    <%= f.input :content, input_html: {class: "form-control"} %>
    <%= link_to_remove_association "Remove step", f, class: "btn btn-danger pull-right" %>
  <% else %>
    <%= f.input :step_order, input_html: {class: "form-control"} %>
    <%= f.input :content, input_html: {class: "form-control"} %>
  <% end %>
</div>
