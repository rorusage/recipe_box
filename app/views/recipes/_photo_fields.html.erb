<div class="nested-fields">
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url.to_s %>
    <%= link_to_remove_association "Remove Photo", f, class: "btn btn-danger pull-right"%>
    <%#= f.label :remove_image %>
    <%#= f.check_box :remove_image %>
  <% else %>
    <%= f.input :image, input_html: {class: "form-control"} %>
    <%= f.input :remote_image_url, input_html: {class: "form-control"} %>
  <% end %>
</div>

