<div class="nested-fields">
  <% if f.object.name? %>
    <%= f.input :name, input_html: {class: "form-control"} %>
    <%= f.input :amount, input_html: {class: "form-control"} %>
    <%= link_to_remove_association "Remove Ingredient", f, class: "btn btn-danger pull-right"%>
  <% else %>
    <%= f.input :name,input_html: {class: "form-control"} %>
    <%= f.input :amount, input_html: {class: "form-control"} %>
  <% end %>
</div>

